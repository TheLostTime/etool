<BorderPane id="mainBorderPane" minHeight="814.0" minWidth="1000.0" prefHeight="814.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.controller.InputStageController">
   <top>
      <TitledPane animated="false" text="导入工程" BorderPane.alignment="CENTER">
        <content>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="100.0" prefWidth="998.0">
               <children>
                  <TextField fx:id="filePathArea" layoutX="21.0" layoutY="25.0" prefHeight="41.0" prefWidth="727.0" />
                  <Button fx:id="chooseFile" layoutX="787.0" layoutY="25.0" mnemonicParsing="false" onAction="#selectExcel" prefHeight="39.0" prefWidth="102.0" text="选择路径" />
               </children></AnchorPane>
        </content>
      </TitledPane>
   </top>
   <center>
      <TitledPane animated="false" prefHeight="778.0" prefWidth="1000.0" text="输入工程" BorderPane.alignment="CENTER">
        <content>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="632.0" prefWidth="998.0">
               <children>
                  <Label layoutX="219.0" layoutY="82.0" text="工程名称:" />
                  <TextField fx:id="projectName" layoutX="297.0" layoutY="77.0" prefHeight="30.0" prefWidth="445.0" />
                  <TitledPane fx:id="picTitlePane" animated="false" layoutX="29.0" layoutY="150.0" prefHeight="410.0" prefWidth="452.0" text="输电线路方式">
                    <content>
                      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="404.0" prefWidth="442.0">
                           <children>
                               <fx:define>
                                   <ToggleGroup fx:id="taxing_selection" />
                               </fx:define>
                              <RadioButton fx:id="txRadio1" layoutX="104.0" layoutY="69.0" mnemonicParsing="false" onMouseClicked="#showTxChoose" text="单回路无地线">
                                 <toggleGroup>
                                    <ToggleGroup fx:id="taxing_selection" />
                                 </toggleGroup></RadioButton>
                              <RadioButton fx:id="txRadio2" layoutX="104.0" layoutY="116.0" mnemonicParsing="false" onMouseClicked="#showTxChoose" text="单回路单地线" toggleGroup="$taxing_selection" />
                              <RadioButton fx:id="txRadio3" layoutX="104.0" layoutY="165.0" mnemonicParsing="false" onMouseClicked="#showTxChoose" text="单回路双地线" toggleGroup="$taxing_selection" />
                              <RadioButton fx:id="txRadio4" layoutX="104.0" layoutY="219.0" mnemonicParsing="false" onMouseClicked="#showTxChoose" text="双回路无地线" toggleGroup="$taxing_selection" />
                              <RadioButton fx:id="txRadio5" layoutX="104.0" layoutY="268.0" mnemonicParsing="false" onMouseClicked="#showTxChoose" text="双回路双地线" toggleGroup="$taxing_selection" />
                           </children></AnchorPane>
                    </content>
                  </TitledPane>
                  <AnchorPane fx:id="picAnchorPanel" layoutX="591.0" layoutY="152.0">
                     <children>
<!--                        <ImageView fx:id="firstImage" fitHeight="416.0" fitWidth="328.0" layoutY="-7.0">-->
<!--                        </ImageView>-->
                     </children>
                  </AnchorPane>
               </children>
            </AnchorPane>
        </content>
      </TitledPane>
   </center>
   <bottom>
      <AnchorPane prefHeight="66.0" prefWidth="1000.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="InputSure" layoutX="303.0" layoutY="6.0" mnemonicParsing="false" onAction="#InputSureAction" prefHeight="57.0" prefWidth="135.0" text="确定" />
            <Button fx:id="inputQuit" layoutX="588.0" layoutY="6.0" mnemonicParsing="false" onAction="#inputQuitAction" prefHeight="57.0" prefWidth="137.0" text="退出" />
         </children>
      </AnchorPane>
   </bottom>
